<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="tokyo.theta.dmitri.SplashFragment"
        android:label="Dmitri"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_browserFragment"
            app:destination="@id/browserFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="tokyo.theta.dmitri.ui.login.LoginFragment"
        android:label="Log in to Mendeley"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_browserFragment"
            app:destination="@id/browserFragment" />
    </fragment>
    <fragment
        android:id="@+id/browserFragment"
        android:name="tokyo.theta.dmitri.BrowserFragment"
        android:label="Folders"
        tools:layout="@layout/fragment_browser" />
</navigation>